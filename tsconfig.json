{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts","**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
